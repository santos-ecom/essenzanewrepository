
RewriteEngine On
RewriteBase /

# Se o arquivo ou diretório existe, sirva-o diretamente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Se não existe e termina com /, tente index.html daquela pasta
RewriteCond %{REQUEST_URI} /$
RewriteCond %{REQUEST_FILENAME}index.html -f
RewriteRule ^(.*)$ $1index.html [L]

# Fallback (opcional, pode remover se não quiser SPA)
# RewriteRule ^ index.html [L]
